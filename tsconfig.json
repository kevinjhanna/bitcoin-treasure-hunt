{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es6",
    "outDir": "build/"
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ]
}